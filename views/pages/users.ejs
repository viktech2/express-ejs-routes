<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="row">
        <div class="col-sm-8">
        
            <div class="jumbotron">
                <h1>This is great</h1>
                <p>Welcome to templating using EJS in Express</p>
            </div>
            
        </div>
        <div class="col-sm-4">
            
            <div class="well">
                <h3>Users!</h3>

                <ul>
                    <% data.forEach(function(row) { %>
                        <li><%= row.name %> - <%= row.age %></li>
                    <% }); %>
                </ul>
            </div>

        </div>
    </div>


</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>